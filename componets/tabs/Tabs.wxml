<view class="tabs">
	<view class="tabs_title">
		<view 
        wx:for="{{tabs}}"
         wx:key="id" 
         class="tabs_text {{item.isActive?'active':''}}"
         bindtap="handleclick"
         data-index="{{index}}"
         >
			{{item.name}}
		</view>
	</view>
    <view class="tabs_content">
    <slot></slot>
    </view>
</view>