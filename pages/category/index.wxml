<view class="cates">
  <!-- 搜索框 -->
  <Search></Search>
  <view class="cate_container">
    <!-- 左侧菜单 -->
    <scroll-view scroll-y="true" class="left_menu">
      <view bindtap="haddleItemTap" data-index="{{index}}" class="menu_item {{index===currentIndex?'active':''}}" wx:for="{{LeftmenuList}}" wx:key="*this">
        {{item}}
      </view>

    </scroll-view>
    <!-- 右侧商品列表 -->
    <scroll-view scroll-top="{{scollTop}}" class="right_content" scroll-y>
      <view class="goods_group" wx:for="{{RightmenuList}}" wx:for-item="item1" wx:for-index="index1" wx:key="cate_id">
        <view class="goods_title">
        <text class="de">/</text>
        <text class="title">{{item1.cate_name}}</text>
        <text class="de">/</text>
        </view>
        <view class="goods_list">
          <navigator url="../goods_list/index?cid={{item2.cate_id}}" wx:for="{{item1.children}}" wx:key="cate_id" wx:for-item="item2" wx:for-index="index2" open-type="navigate">
            <image src="{{item2.cate_icon}}" mode="widthFix" />
            <view class="goods_name">
              {{item2.cate_name}}
            </view>
          </navigator>
        </view>
      </view>
    </scroll-view>
  </view>
</view>