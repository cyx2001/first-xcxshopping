page {
  background-color: #edece8;
}
.user_info_wrap {
  height: 45vh;
  background-color: #ccc;
  overflow: hidden;
  position: relative;
}
.user_info_wrap .user_img_wrap .user_img_bg {
  height: 50vh;
  filter: blur(10rpx);
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  top: 30%;
  transform: translateX(-50%);
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_info_avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.user_info_wrap .user_img_wrap .user_info .user_info_name {
  color: white;
  margin-top: 20rpx;
  font-size: 32rpx;
}
.user_info_wrap .user_info_btn {
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translateX(-50%);
  color: #0f7514;
  border: 1rpx solid #0f7514;
  padding: 20rpx;
  font-size: 32rpx;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  color: #666;
  padding-bottom: 40rpx;
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
}
.user_content .user_main .histroy_wrap {
  display: flex;
  background-color: #fff;
  text-align: center;
}
.user_content .user_main .histroy_wrap navigator {
  flex: 1;
  padding: 10rpx 0;
}
.user_content .user_main .histroy_wrap navigator .ht_num {
  color: var(--themecolor);
}
.user_content .user_main .order_wrap {
  background-color: #fff;
  margin-top: 20rpx;
}
.user_content .user_main .order_wrap .order_title {
  border-bottom: 1rpx solid #ccc;
  padding: 20rpx;
}
.user_content .user_main .order_wrap .order_content {
  display: flex;
  text-align: center;
}
.user_content .user_main .order_wrap .order_content navigator {
  flex: 1;
  padding: 20rpx 0;
}
.user_content .user_main .order_wrap .order_content navigator .iconfont {
  color: var(--themecolor);
  font-size: 40rpx;
}
.user_content .user_main .address_wrap {
  background-color: #fff;
  padding: 20rpx;
  margin-top: 30rpx;
}
.user_content .user_main .app_info_wrap {
  background-color: #fff;
  margin-top: 30rpx;
}
.user_content .user_main .app_info_wrap .app_info_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .recomend_wrap {
  background-color: #fff;
  padding: 20rpx;
  margin-top: 30rpx;
}
