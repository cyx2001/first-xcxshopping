<!-- 收货地址 -->
<view class="recivew_address_row">
	<view  class="user_info_row">
		<view class="user_info">
			<view>
				收货人：{{address.userName}}
			</view>
			<view>
				{{address.all}}
			</view>
		</view>
		<view class="user_phone">
			{{address.telNumber}}
		</view>

	</view>

</view>
<!-- 购物车内容 -->
<view class="cart_content">
	<view class="cart_title">购物车</view>
	<view class="cart_main">
			<view class="crat_item" wx:for="{{cart}}" wx:key="{{item.goods_id}}">
				<!-- 商品图片 -->
				<navigator url="../goods_detail/index?goods_id={{item.goods_id}}" open-type="navigate">
					<image src="{{item.goodsurl}}" mode="widthFix"></image>
				</navigator>
				<!-- 商品信息 -->
				<view class="cart_info">
					<view class="goods_name">{{item.goods_id+item.goods_name}}</view>
					<view class="goods_price_warp">
						<view class="goods_price">￥{{item.goods_price}}</view>
						<view class="goods_nums_tool">
							<view class="goods_nums">×{{item.num}}</view>
						</view>
					</view>
				</view>
			</view>
	</view>

</view>
<!-- 底部工具栏 -->
<view class="cart_tools">
	<!-- 总价格 -->
	<view class="goods_count_warp">
		<view class="goods_count">
			合计：<text class="goods_count_num">￥{{totalprice}}</text>
		</view>
		<view>
			包含运费
		</view>
	</view>
	<!-- 结算 -->
	<view class="goods_pay_btn" bindtap="handleOrderPay">支付({{totalnum}})</view>
</view>