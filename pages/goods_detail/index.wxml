<view class="detail_swiper">
	<swiper indicator-dots autoplay circular>
		<swiper-item class="" item-id="" wx:for="{{goodsObj.pic}}" wx:key="pic_id">
			<image bindtap="handlePreviewImage" src="{{item.pic_url}}" mode="widthFix"></image>
		</swiper-item>

	</swiper>
</view>
<view class="goods_price">￥{{goodsObj.goods_price}}</view>
<view class="goods_name_row">
	<view class="goods_name">{{goodsObj.goods_name}}</view>
	<view class="goods_collect" bindtap="handleCollect">
		<text class="iconfont {{iscollect?'icon-favorfill':'icon-favor'}}"></text>
		<view class="collect_text"  >收藏</view>
	</view>
</view>
<view class="goods_info">
	<view class="goods_info_title">商品详情</view>
	<view class="goods_content"></view>
</view>
<view class="goods_tool">
	<view class="goods_tool_item">
		<text class="iconfont icon-kefu"></text>
		<view class="goods_tool_title">客服</view>
        <button open-type="contact"></button>
          
	</view>
    <view class="goods_tool_item">
		<text class="iconfont icon-share"></text>
		<view class="goods_tool_title">分享</view>
         <button open-type="share"></button>
	</view>
    <navigator url="../cart/index" open-type="switchTab" class="goods_tool_item">
		<text class="iconfont icon-gouwuche"></text>
		<view class="goods_tool_title">购物车</view>
	</navigator>
    <view class="goods_tool_item btn_cart" bindtap="handleAddCart">
		加入购物车
	</view>
    <view class="goods_tool_item btn_buy">
		立即购买
	</view>
</view>